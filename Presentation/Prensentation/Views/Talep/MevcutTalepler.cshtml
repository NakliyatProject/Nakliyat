@model IEnumerable<TasimaTalebi>
@{
    ViewData["Title"] = "Mevcut Talepler";
}
<div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Müşteri Bilgisi</th>
                <th>Konum</th>
                <th>Durum</th>
                <th>Kilometre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tlp in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://ankaranakliye.org/wp-content/uploads/2021/03/esya-paketleme.jpg"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-3" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@tlp.Aciklama</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">Varış: @tlp.Bitis</p>
                        <p class="text-muted mb-0">@tlp.Baslangic 'tan</p> 
                    </td>
                    <td>
                        <a class="rounded-3 d-inline btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="CompanyRegister">Teklif Sayısı:83   </a>
                    </td>
                    <td>@tlp.Mesafe</td>
                    <td>
                        <a type="button" class="btn btn-outline-success" asp-controller="Account" asp-action="CompanyRegister"><i class="fa-solid fa-truck-fast"></i>  Taşı</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
