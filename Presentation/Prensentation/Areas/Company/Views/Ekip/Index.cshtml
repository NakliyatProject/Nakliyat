@model IEnumerable<Ekip>

<div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="CreatePage">
            <i class="fa fa-plus"></i>
            Ekip Ekle
        </a>
    </div>

    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Araç Bilgileri</th>
                <th>Ekip Adı</th>
                <th>Telefon</th>                <th>Durum</th>
                <th class="text-center">Ekip Yorumları</th>
                <th class="text-center">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ekip in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="\images\transit.jpeg"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-pill" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@ekip.AracName</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@ekip.EkipName</p>
                        <p class="text-muted mb-0">@ekip.EkipLead</p>
                    </td>
                    <td>
                        @ekip.EkipTelNo
                    </td>
                    <td>
                        <span class="badge badge-success rounded-pill d-inline text-white bg-success">0</span>
                    </td>
                    <td class="text-center">
                        <a type="button" class="btn btn-warning " asp-area="Company" asp-controller="Talep" asp-action="GetTalep"><i class="fa-solid fa-comment text-white"></i>  Yorumlar</a>
                    </td>
                    <td class="text-center">
                        <a type="button" class="btn btn-danger " asp-area="Company" asp-controller="Talep" asp-action="GetTalep"><i class="fa-regular fa-pen-to-square"></i>  Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
